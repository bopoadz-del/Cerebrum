# ============================================
# Cerebrum AI Platform - Environment Variables
# ============================================

# Application Configuration
# -------------------------
VITE_APP_NAME=Cerebrum AI
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# API Configuration
# -----------------
# Host URL for API requests (no trailing slash, no /api/v1)
# The app will append /api/v1 automatically
VITE_API_URL=http://localhost:8000

# WebSocket URL for real-time features
VITE_WS_URL=ws://localhost:8000/ws

# Authentication
# --------------
# JWT token expiration time in minutes
VITE_TOKEN_EXPIRY=60

# Refresh token expiration time in days
VITE_REFRESH_TOKEN_EXPIRY=7

# Feature Flags
# -------------
# Enable/disable specific features
VITE_FEATURE_AI_CHAT=true
VITE_FEATURE_BIM_VIEWER=true
VITE_FEATURE_ML_TINKER=true
VITE_FEATURE_FEDERATED_LEARNING=true
VITE_FEATURE_EDGE_DEVICES=true

# External Services
# -----------------
# Sentry error tracking
VITE_SENTRY_DSN=

# Analytics (optional)
VITE_ANALYTICS_ID=

# Map provider API key (for location features)
VITE_MAP_API_KEY=

# Storage Configuration
# ---------------------
# Maximum file upload size in MB
VITE_MAX_UPLOAD_SIZE=100

# Allowed file types for uploads
VITE_ALLOWED_FILE_TYPES=.pdf,.dwg,.rvt,.ifc,.xlsx,.csv,.jpg,.png

# Cache Configuration
# -------------------
# Service Worker cache version
VITE_CACHE_VERSION=v1

# Default cache duration in minutes
VITE_CACHE_DURATION=5

# Development Settings
# --------------------
# Enable mock API responses
VITE_ENABLE_MOCK_API=false

# Enable detailed error messages
VITE_DEBUG_MODE=true

# Mock delay in milliseconds (for simulating network latency)
VITE_MOCK_DELAY=500

# Build Configuration
# -------------------
# Build target environment
VITE_BUILD_TARGET=es2020

# Enable source maps in production
VITE_SOURCE_MAPS=false

# ============================================
# Instructions:
# 1. Copy this file to .env.local
# 2. Update the values with your actual configuration
# 3. Never commit .env.local to version control
# ============================================
